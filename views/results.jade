doctype html

head
    title Seçim Benim - Blockchain İle Güvenli Seçim
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
    link(href='stylesheets/css/results.min.css', rel='stylesheet')
    link(rel='stylesheet' href='stylesheets/css/results.css')

block content
    section.hero-wrap.hero-wrap-2(style="background-image: url('images/secim.jpg');" data-stellar-background-ratio='0.5')
        .overlay
        .container
            .row.no-gutters.slider-text.align-items-center.justify-content-center
                .col-md-9.ftco-animate.text-center
                    h1.mb-2.bread Sonuçlar
                    p.breadcrumbs
                        span.mr-2
                            a(href='index')
                                | Anasayfa
                                i.ion-ios-arrow-forward
                        span
                            | Sonuçlar
                            i.ion-ios-arrow-forward

    section.ftco-section.bg-light
        .container
            .row
                .progress
                    .progress-bar(role='progressbar', aria-valuenow='60', aria-valuemin='0', aria-valuemax='100', style='width: 60%;')
                        span.sr-only 60%
                    span.progress-type A Partisi
                    span.progress-completed 60%
                .progress
                    .progress-bar.progress-bar-success(role='progressbar', aria-valuenow='40', aria-valuemin='0', aria-valuemax='100', style='width: 40%')
                        span.sr-only 40%
                    span.progress-type B Partisi
                    span.progress-completed 40%
                .progress
                    .progress-bar.progress-bar-info(role='progressbar', aria-valuenow='20', aria-valuemin='0', aria-valuemax='100', style='width: 20%')
                        span.sr-only 20%
                    span.progress-type C Partisi
                    span.progress-completed 20%
                .progress
                    .progress-bar.progress-bar-warning(role='progressbar', aria-valuenow='60', aria-valuemin='0', aria-valuemax='100', style='width: 20%')
                        span.sr-only 20%
                    span.progress-type D Partisi
                    span.progress-completed 20%

    // loader
    #ftco-loader.show.fullscreen
        svg.circular(width='48px' height='48px')
            circle.path-bg(cx='24' cy='24' r='22' fill='none' stroke-width='4' stroke='#eeeeee')
            circle.path(cx='24' cy='24' r='22' fill='none' stroke-width='4' stroke-miterlimit='10' stroke='#F96D00')