extends layout

append css
    script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.5.6/angular.min.js')
block content
    section.hero-wrap.hero-wrap-2(style="background-image: url('/images/secim.jpg');" data-stellar-background-ratio='0.5')
        .overlay
        .container
            .row.no-gutters.slider-text.align-items-center.justify-content-center
                .col-md-9.ftco-animate.text-center
                    h1.mb-2.bread Sonuçlar
                    p.breadcrumbs
                        span.mr-2
                            a(href='/index')
                                | Ana Sayfa
                                i.ion-ios-arrow-forward
                        span
                            | Sonuçlar
                            i.ion-ios-arrow-forward

    section.ftco-section.bg-light(ng-app='Results')
        .container.d-flex.slider-text.align-items-center.justify-content-center(ng-controller='resultsController')
            .row.no-gutters.slider-text.align-items-center.justify-content-center
                h3 Seçim Sonuçları
                #piechart.col-md-10.offset-md-1

    append javascript
        script(src='https://www.gstatic.com/charts/loader.js')
        script(src='/javascripts/sonuc.js')

    // loader
    #ftco-loader.show.fullscreen
        svg.circular(width='48px' height='48px')
            circle.path-bg(cx='24' cy='24' r='22' fill='none' stroke-width='4' stroke='#eeeeee')
            circle.path(cx='24' cy='24' r='22' fill='none' stroke-width='4' stroke-miterlimit='10' stroke='#F96D00')