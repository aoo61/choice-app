extends layout

block content
    section.hero-wrap.hero-wrap-2(style="background-image: url('/images/secim.jpg');" data-stellar-background-ratio='0.5')
        .overlay
        .container
            .row.no-gutters.slider-text.align-items-center.justify-content-center
                .col-md-9.ftco-animate.text-center
                    h1.mb-2.bread Bizimle İletişime Geçebilirsiniz
                    p.breadcrumbs
                        span.mr-2
                            a(href='/index')
                                | Anasayfa
                                i.ion-ios-arrow-forward
                        span
                            | İletişim
                            i.ion-ios-arrow-forward

    section.ftco-section.ftco-no-pt.ftco-no-pb.contact-section
        .container
            .row.d-flex.align-items-stretch.no-gutters
                .col-md-6.p-4.p-md-5.order-md-last.bg-light
                    form(action='contact/send' method='POST')
                        .form-group
                            input.form-control(type='text' name='name' placeholder='Adınız')
                        .form-group
                            input.form-control(type='text' name='surname' placeholder='Soyadınız')
                        .form-group
                            input.form-control(type='text' name='email' placeholder='E-mail')
                        .form-group
                            input.form-control(type='text' name='phone' placeholder='Phone')
                        .form-group
                            input.form-control(type='text' name='subject' placeholder='Konu')
                        .form-group
                            textarea.form-control(type='text' name='message' cols='30' rows='4' placeholder='Yaptırmak istediğiniz seçim çalışması nedir?')
                        .form-group
                            input.btn.btn-primary.py-3.px-5(type='submit' value='Mesajı Gönder')
                .col-md-6.d-flex.align-items-stretch
                    iframe(src='https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d12094.40268275094!2d29.95802650419921!3d40.726806523204246!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1str!2str!4v1575470528093!5m2!1str!2str' width='600' height='450' frameborder='0' style='border:0;' allowfullscreen='')

    section.ftco-section.contact-section
        .container
            .row.d-flex.mb-5.contact-info
                .col-md-12.mb-4
                    h2.h4 İletişim Bilgileri
                .w-100
                .col-md-3.d-flex
                    .bg-light.d-flex.align-self-stretch.box.p-4
                        p
                            span Adres:
                            |  Cumhuriyet Mh. Hürriyet Sk. No:16/1, Başiskele / Kocaeli 41190
                .col-md-3.d-flex
                    .bg-light.d-flex.align-self-stretch.box.p-4
                        p
                            span Tel:
                            a(href='tel://02623443137') +90 262 344 31 37
                .col-md-3.d-flex
                    .bg-light.d-flex.align-self-stretch.box.p-4
                        p
                            span Email:
                            a(href='mailto:g140910030@sakarya.edu.tr') g140910030@sakarya.edu.tr
                .col-md-3.d-flex
                    .bg-light.d-flex.align-self-stretch.box.p-4
                        p
                            span Sitemiz:
                            a(href='https://secimbenim.com')  secimbenim.com

    // loader
    #ftco-loader.show.fullscreen
        svg.circular(width='48px' height='48px')
            circle.path-bg(cx='24' cy='24' r='22' fill='none' stroke-width='4' stroke='#eeeeee')
            circle.path(cx='24' cy='24' r='22' fill='none' stroke-width='4' stroke-miterlimit='10' stroke='#F96D00')