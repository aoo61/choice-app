extends layout

append css
    link(rel='stylesheet' href='/stylesheets/css/block-explorer.css')
    script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.5.6/angular.min.js')
block content
    section.hero-wrap.hero-wrap-2(style="background-image: url('/images/secim.jpg');" data-stellar-background-ratio='0.5')
        .overlay
        .container
            .row.no-gutters.slider-text.align-items-center.justify-content-center
                .col-md-9.ftco-animate.text-center
                    h1.mb-2.bread Mining
                    p.breadcrumbs
                        span.mr-2
                            a(href='/index')
                                | Ana Sayfa
                                i.ion-ios-arrow-forward
                        span.mr-2
                            a(href='/blockchain')
                                | Blockchain
                                i.ion-ios-arrow-forward
                        span
                            | Mining
                            i.ion-ios-arrow-forward


    section.ftco-section.testimony-section.bg-light(ng-app='BlockExplorer')
        .container(ng-controller='MainController')
            .row
                .col-md-10.offset-md-1
                    // 'display block' table
                    h3.table-title(ng-if='block') Mining YapÄ±lan Blok
                    table.table.table-striped(ng-if='block')
                        tbody
                            tr
                                td.bold Block Hash
                                td {{ block.hash }}
                            tr
                                td.bold Index
                                td {{ block.index }}
                            tr
                                td.bold Time Stamp
                                td {{ block.timestamp }}
                            tr
                                td.bold Nonce
                                td {{ block.nonce }}
                            tr
                                td.bold Previous Hash
                                td {{ block.previousBlockHash }}
                            tr
                                td.bold Number Transactions
                                td {{ block.transaction.length }}
                    // end 'display block' table
append javascript
    script(src='/javascripts/block-explorer.js')
    // loader
    #ftco-loader.show.fullscreen
        svg.circular(width='48px' height='48px')
            circle.path-bg(cx='24' cy='24' r='22' fill='none' stroke-width='4' stroke='#eeeeee')
            circle.path(cx='24' cy='24' r='22' fill='none' stroke-width='4' stroke-miterlimit='10' stroke='#F96D00')