html
    head
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1.0, shrink-to-fit=no')
        title Seçim Benim - Blockchain İle Güvenli Seçim
        link(rel='stylesheet', href='/yeni/assets/bootstrap/css/bootstrap.min.css')
        link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,700')
        link(rel='stylesheet', href='/yeni/assets/fonts/font-awesome.min.css')
        link(rel='stylesheet', href='/yeni/assets/fonts/ionicons.min.css')
        link(rel='image', href='images/A.png')

    body.d-flex.flex-grow-0.justify-content-center.align-content-center.align-items-lg-center
        .container
            form(action='/blockchain/network/transaction/broadcast', method='POST', required='true')
                .form-group.text-monospace.text-uppercase.text-sm-center.text-md-center.text-lg-center.text-xl-center.d-flex.float-none.flex-row.justify-content-around
                    img(src='images/A.png', width="100", height="100")
                    img(src='images/B.png', width="100", height="100")
                    img(src='images/C.png', width="100", height="100")
                    img(src='images/D.png', width="100", height="100")
                .form-group.text-monospace.text-uppercase.text-sm-center.text-md-center.text-lg-center.text-xl-center.border.rounded.shadow-lg.d-flex.float-none.flex-row.justify-content-around
                    .custom-control.custom-radio
                        input#formCheck-1.custom-control-input(type='radio', name='choice', value='A')
                        label.radio-inline.custom-control-label(for='formCheck-1') A Partisi
                    .custom-control.custom-radio
                        input#formCheck-2.custom-control-input(type='radio', name='choice', value='B')
                        label.radio-inline.custom-control-label(for='formCheck-2') B Partisi
                    .custom-control.custom-radio
                        input#formCheck-3.custom-control-input(type='radio', name='choice', value='C')
                        label.radio-inline.custom-control-label(for='formCheck-3') C Partisi
                    .custom-control.custom-radio
                        input#formCheck-4.custom-control-input(type='radio', name='choice', value='D', rightToLeft='yes')
                        label.radio-inline.custom-control-label(for='formCheck-4') D Partisi
                .form-group.text-monospace.text-uppercase.text-sm-center.text-md-center.text-lg-center.text-xl-center.d-flex.float-none.flex-row.justify-content-around
                    button.btn.btn-outline-primary.btn-lg.text-uppercase.border.rounded.shadow(type='submit') OY VER

        script(src='/yeni/assets/bootstrap/js/bootstrap.min.js')