extends layout

block content
    section.hero-wrap.hero-wrap-2(style="background-image: url('/images/secim.jpg');" data-stellar-background-ratio='0.5')
        .overlay
        .container
            .row.no-gutters.slider-text.align-items-center.justify-content-center
                .col-md-9.ftco-animate.text-center
                    h1.mb-2.bread Blockchain
                    p.breadcrumbs
                        span.mr-2
                            a(href='/index')
                                | Anasayfa
                                i.ion-ios-arrow-forward
                        span
                            | Blockchain
                            i.ion-ios-arrow-forward

    section.ftco-section
        .container
            .row
                .col-md-6.col-lg-3.ftco-animate
                    .staff
                        .img-wrap.d-flex.align-items-stretch
                            .img.align-self-stretch(style='background-image: url(/images/doc-1.jpg);')
                        .text.pt-3.text-center
                            a(href='blockchain/show') Blockchain'i Göster
                            span.position.mb-2 Blockchain
                            .faded
                                p Tüm Blockchain'i buradan görebiliriz.
                .col-md-6.col-lg-3.ftco-animate
                    .staff
                        .img-wrap.d-flex.align-items-stretch
                            .img.align-self-stretch(style='background-image: url(/images/doc-2.jpg);')
                        .text.pt-3.text-center
                            a(href='blockchain/node') Node Kayıt
                            span.position.mb-2 Node
                            .faded
                                p Ağımıza yeni node buradan kayıt edebiliriz.
                .col-md-6.col-lg-3.ftco-animate
                    .staff
                        .img-wrap.d-flex.align-items-stretch
                            .img.align-self-stretch(style='background-image: url(/images/doc-3.jpg);')
                        .text.pt-3.text-center
                            a(href='blockchain/mine') Mining Yap
                            span.position.mb-2 Mine
                            .faded
                                p Mining işlemini buradan yapabiliriz.
                .col-md-6.col-lg-3.ftco-animate
                    .staff
                        .img-wrap.d-flex.align-items-stretch
                            .img.align-self-stretch(style='background-image: url(/images/doc-4.jpg);')
                        .text.pt-3.text-center
                            a(href='blockchain/search') Block ve Transaction Arama
                            span.position.mb-2 Block ve Transaction
                            .faded
                                p Blockchain de görmek istediğimiz block veya transactionları buradan görebiliriz.

    // loader
    #ftco-loader.show.fullscreen
        svg.circular(width='48px' height='48px')
            circle.path-bg(cx='24' cy='24' r='22' fill='none' stroke-width='4' stroke='#eeeeee')
            circle.path(cx='24' cy='24' r='22' fill='none' stroke-width='4' stroke-miterlimit='10' stroke='#F96D00')